<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDateButton"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button"
        android:elevation="100dp"
        android:fontFamily="@font/abel"
        android:textSize="25sp"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:text="@string/your_birthday"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/abel"
        android:text="@string/selected_date"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/btnDateButton"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="@+id/btnDateButton"
        app:layout_constraintTop_toBottomOf="@+id/btnDateButton" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="@color/lightGrey"
        android:fontFamily="@font/abel"
        android:padding="2dp"
        android:text="@string/_00_00_0000"
        android:textColor="@color/black"
        android:textSize="14sp"

        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/btnDateButton" />

    <Button
        android:id="@+id/calculateBtn"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginTop="120dp"
        android:textSize="18sp"
        android:fontFamily="@font/abel"
        android:elevation="100dp"
        android:text="@string/calculate"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDateButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:fontFamily="@font/abel"
        android:text="Minutes : "
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculateBtn" />

    <TextView
        android:id="@+id/AgeInMinute"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:background="@color/lightGrey"
        android:fontFamily="@font/abel"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/calculateBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>